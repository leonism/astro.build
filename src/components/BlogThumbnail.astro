---
import { Picture } from '@astrojs/image/components';

export interface Props {
  src: string;
  alt?: string;
  [attr: string]: any;
}

const { src, ...attrs } = Astro.props as Props;
---

<Picture src={src} widths={[400, 850, 1534]} sizes="(max-width: 767px) 100vw, 196px" {...attrs} />

<style>
  picture :global(> img) {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>