---
export interface Props extends astroHTML.JSX.HTMLAttributes {
    as: string
}

const { as: Component, class: className = '', ...props } = Astro.props as Props
---

<Component
    class:list={[
        className,
        'max-w-7xl',
        'mx-auto',
        'px-4',
        'sm:px-6',
        'lg:px-8'
    ]}
    {...props}
>
    <slot />
</Component>
